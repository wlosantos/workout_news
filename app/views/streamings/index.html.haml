.main_wrapper
  %main
    .content_main
      - @streamings.each do |streaming|
        .post_content
          .post_image
            = link_to streaming do
              %figure.img_post
                = image_tag(@streaming.tumbnail)
          .post_description
            .post_title
              %h4 #{ streaming.title }
              %small
                #{ l streaming.created_at, format: :short }
            .post_body
              -# %p.mb-3 #{ truncate(strip_tags(post.body.to_s), length: 180) }
            .post_footer.has-text-right
              .post_tags
                -# - if post.tag_list.any?
                  .tag_detail
                    %strong Tags:
                  #{ raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') }

    %hr
    .pages-content
      %div
        = paginate @streamings

  %aside
    .post_sidebar
      - if current_user.kind == 'admin'
        = render 'users/user_profile', profile: current_user
      -# = render 'shared/tags'
