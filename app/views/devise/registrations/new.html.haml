.devise__wrapper
  .devise_container
    .devise_anuncio
      = image_tag(url_for('https://picsum.photos/800/800/?blur=2'), class: 'devise-back')
    .devise_form
      %h2.title.is-4 Novo Cadastro
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .field
          .control
            = f.text_field :name, class: 'input', autofocus: true, placeholder: "digite seu nome e sobrenome"
        .field
          .control
            = f.text_field :username, class: 'input', autofocus: true, placeholder: 'apelido (sem espaços)'
        .field
          .control
            = f.email_field :email, class: 'input', autofocus: true, placeholder: 'email'
        .field
          = f.password_field :password, class: 'input', autocomplete: "new-password", placeholder: 'senha (mínimo 6 dígitos)'
        .field
          = f.password_field :password_confirmation,class: 'input', autocomplete: "new-password", placeholder: 'confirmar senha'
        .actions.has-text-centered
          = f.submit class: 'button is-info mt-2'

      .shared_links
        %span.has-text-grey
          já sou cadastrado -
          = render "devise/shared/links"
